/* order.wxss */
.orderview{
    height: 100%;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;

}
.order_picture{
    margin-left: 40px;
    margin-top: 30px;
    opacity: 0.4;
}
/*标题*/
.order_title{
    text-align: center;
    margin-top: 2px;
    font-size: 20px;
    font-weight: bold;
    opacity: 0.8;
}

/*内容*/
.order_contents{
    margin-top:10px;
    font-size: 15px;
    text-align: center;
    opacity: 0.4;
}

.button{
    margin-left: 30px;
    margin-right: 30px;
    border: 10px solid #fff;
    border-radius: 20px;
}